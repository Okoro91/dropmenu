{
  "name": "simple-dropdown-menu",
  "version": "1.0.0",
  "description": "A reusable, customizable dropdown menu component",
  "main": "dist/dropdown.min.js",
  "style": "dist/dropdown.min.css",
  "scripts": {
    "build": "npm run build:js && npm run build:css",
    "build:js": "terser dropdown.js -o dist/dropdown.min.js --compress --mangle",
    "build:css": "cleancss -o dist/dropdown.min.css dropdown.css",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "dropdown",
    "menu",
    "ui",
    "component",
    "javascript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "clean-css-cli": "^5.6.0",
    "terser": "^5.15.0"
  },
  "files": [
    "dist",
    "src"
  ]
}
